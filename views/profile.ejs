</div> -->
<div class="w3-bar w3-border  w3-text-white w3-collaspe " id="nav_bar">
	<a href="/profile" class="w3-bar-item w3-button w3-hover-none  w3-hover-text-grey w3-padding-16">MUNSSN</a>
	<a href="/group" class="w3-bar-item w3-button w3-hover-none w3-hover-text-grey w3-padding-16">Group</a>
	<a href="/friend" class="w3-bar-item w3-button  w3-hover-none  w3-hover-text-grey w3-padding-16">Friends</a>
	<a href="/lostandfound" class="w3-bar-item w3-button  w3-hover-none  w3-hover-text-grey w3-padding-16">Lost and Found</a>
	<a href="/coursepoll" class="w3-bar-item w3-button w3-hover-none  w3-hover-text-grey w3-padding-16">Course Poll</a>
	<a href="/chatroom" class="w3-bar-item w3-button w3-hover-none  w3-hover-text-grey w3-padding-16">chatroom</a>

	<div class="w3-dropdown-hover w3-right">
<button class="w3-button w3-hover-none w3-hover-text-grey"><img src="../<%=user.image%>"class="w3-bar-item" width="42px" height="42px"><p class="w3-bar-item w3-margin-right" id='user_email' alt='<%=user.local.email%>'><%= user.name.first%></p></button>
<div class="w3-dropdown-content w3-bar-block w3-cards">
	<a href="/profile" class="w3-bar-item w3-button">profile</a>
	<a href="#" class="w3-bar-item w3-button">Setting</a>
	<a href="/logout" class="w3-bar-item w3-button">Logout</a>
</div>
</div>
</div>
<div id="body_div" >
	<div id = "profLeft" class ="w3-third w3-moblie w3-center">
		<div class="w3-card">
			<div class="w3-card-2 w3-red">
				<h1> Info</h1></div>
				<div class=' w3-center'>
				<div class="box w3-margin" >
      <img width="200px" height="200px" src="../<%=user.image%>"/>
         <div class="mask">
        <a  class="link" title="Upload new image" onclick="document.getElementById('profile_image_modal').style.display='block'">Upload new image</a>
         </div>
    </div>
	</div>
  <div id="profile_image_modal" class="w3-modal">
    <div class="w3-modal-content" style="max-width:600px">
      <div class="w3-container">
        <form action='/edit_profile_image' method='post'>
        <span onclick="document.getElementById('profile_image_modal').style.display='none'" class="w3-button w3-display-topright">&times;</span>
        <input type="file" name='picture' onchange="previewFile()"><br><br>
		      <img src="" height="200" alt="Image preview..." class="prev"><br><br>
     	<button type='submit'>Submit</button>
    </form>
      </div>
    </div>
  </div>
    <div class="w3-container">
      <h4><b><%=owner.name.first%> <%=owner.name.last%></b></h4>
      <p>Year <%=owner.Year%></p>
			<p>Major <%= owner.Major%></P>
			<p>Birthday <%= owner.birthday%></p>
		</div>

	</div>
	<div class="w3-contianer w3-card-3 w3-blue">
	<% if(owner._id == user._id){%>


		<% requestStatus.forEach(function(user) {%>
		<p>  <%=user.requester%> sending you a friend request</p>
			<time id="then" datetime="<%= user.dateAccepted%>"></time>
		<form action ="/acceptRequest" method = "post">
		<input type="hidden" name="requester" value="<%=user.requester.name.first%>" </p>
		<button type="submit"> Accept Request </button>
		<button type="submit"> Deny Request </button>
		</form>
		<% }) %>


		<h1> suggested Friends</h1>
		<% suggestedFriends.forEach(function(friend) {%>
		<form action="/requestFriend" method="post">
				<h3><%=friend.name.first %> <%=friend.name.last%></h3>
		<input type ='hidden' name='email' value='<%=friend.local.email%>'/>
		<button type="submit"> Add Friend </button>
		</form>
		<% }) %>
		<% } %>
		<h1>My Friends</h1>
		<% friends.forEach(function(friend) {%>
			<h3><%=friend.name.first %> <%=friend.name.last%></h3>
		<% }) %>
		</div>
</div>

	<div id = "profRight" class ="w3-twothird w3-moblie w3-margin-top">

		<div id = "tab">
			<button class="tablink" onclick="openTab(event, 'Timeline')" id="defaultLoad">Timeline</button>
			<button class="tablink" onclick="openTab(event, 'Schedule')">Schedule</button>
			<button class="tablink" onclick="openTab(event, 'Resume')">Resume</button>
		</div>
		<div id = "tlBox">
			<div id="Timeline" class="tabcontent">

				<div id="postBox">
					<form action="/post" method="post">
					<textarea name="message" rows="4" placeholder="Enter message here."></textarea><br>
          <input type="hidden" name="email" value="<%= owner.local.email %>">
					<select id="permission" name="visibility">
						<option value="everyone">Everyone</option>
						<option value="friends">Friends</option>
						<option value="me">Only me</option>
						<option value="specific">Select...</option>
					</select>

						<div id="id01" class="w3-modal">
							<div class="w3-modal-content" style="max-width:600px">
								<div class="w3-container">
										<span onclick="document.getElementById('id01').style.display='none'" class="w3-button w3-display-topright">&times;</span>
											<input type="checkbox" name="options[]" value="1" />1<br>
											<input type="checkbox" name="options[]" value="2" />2<br>
											<input type="checkbox" name="options[]" value="3" />3<br>
											<input type="checkbox" name="options[]" value="4" />4<br>
											<input type="checkbox" name="options[]" value="5" />5<br>
				<p class="w3-button w3-grey" id="setfriends">set</p>
			</div>
			</div>
					</div>
					<input type="hidden" value="" id="friendlist">
					<button class="post w3-button w3-white" type="submit"><i class="fa fa-pencil"></i> Post</button>
					</form>
				</div>

     <h2 class="w3-text-white">List of Post</h2>
		 <input type ="hidden" value ="<%= postlist.length%>" id='length'/>
<% postlist.forEach(function(post, index) { %>
	<div class="w3-panel w3-card-2 w3-white">
<form method="post" class="inline" id ="postform_<%= post._id %>">
		<img src='<%=post.postby.image%>' width='50' height="50">
		<span> <%=post.postby.name.first%> <%=post.postby.name.last%></span> <br> <time id="then" datetime="<%= post.date%>"></time>
    <p><%= post.body %></p>
    <br>

    <div id ="comment_area<%=index%>"  class='w3-card w3-white w3-margin'>
			<% post.comments.forEach(function(comments){%>
				<div class='w3-card-2 w3-white'>

				<p><%= comments.text%></p>
			</div>
			<%})%>
    </div>
    <input type="text" name="comment" id ='comment' style="width:80%">
    <button type="submit" name="post_id" value="<%= post._id %>" id="comment_btn<%=index%>" alt="<%=index%>">comment
    </button>



</form>
</div>
 <% }) %>
	</div>
			<div id="Schedule" class="tabcontent">
				  <button onclick="document.getElementById('id02').style.display='block'" class="w3-button w3-white">Create Schedule</button>
					<div id="id02" class="w3-modal">
						<div class="w3-modal-content">
							<div class="w3-container">
								<span onclick="document.getElementById('id02').style.display='none'" class="w3-button w3-display-topright">&times;</span>
								<p>Enter Schedule Information</p>
							</div>
						</div>
					</div>
			</div>
			<div id="Resume" class="tabcontent">
				<p> resumen go here</P>
			</div>
		</div>


	</div>

</div>
</body>
</html>
