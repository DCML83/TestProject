    <br>
  <time id="then" datetime="<%= post.date%>"></time>
    <div id ="comment_area">

    </div>
    <input type="text" name="comment" value="">
    <button type="submit" name="post_id" value="<%= post._id %>" class="link-button" onclick="submitText(this)">comment
    </button>

</form>
</div>
 <% }) %>
