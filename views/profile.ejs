});
</script>
<script>
function findUser(){
  <% for (var i = 0; i <  owner.friends.length; i++){ %>
    if('<%=owner.friends[i]%>' == '<%=user._id%>'){
      return true;
    }
  <%  } %>
  return false;
}
$(document).ready(function(){

  $('#resume').hide();
  $('#posting').hide();
  $('#scheduler_here').hide()
  console.log($('#resume').attr('src') )
  if ('<%=owner._id%>'== '<%=user._id%>'){
      $('#resume').show();
      $('#scheduler_here').show();
    }
      else if (findUser()) {
        if($('#resume').attr('src') != '../noresume'){
        $('#resume').show();

        }
        $('#scheduler_here').show();
        $('#addfriends').hide();

      }
  if('<%=owner.visibility%>' =='everyone'){
    $('#posting').show();
  }else if(<%=owner.visibility%> =='friends'){
    if (findUser()){
      $('#posting').show();
    }
  }

});
</script>
