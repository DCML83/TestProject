<script type ="text/javascript">
  function submitText(event){
 	 var form = event.form;
 	var div  = form.querySelector('#comment_area');
 		add(form, div);
  }

  function add(form ,div, s){
 	var para = document.createElement("p");
 	var node = document.createTextNode(form.comment.value);
 	para.appendChild(node);
    div.appendChild(para);
    form.comment.value =""
 	}
 </script>
